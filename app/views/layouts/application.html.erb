          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
              <li class="nav-item">
                <%= link_to "Ar Condicionados", air_conditionings_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Tarifas", tariffs_path, class: "nav-link" %>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <div id="content" class="container">
        <%= yield %>
      </div>
      <div class="footer">
        <div class="footer-links">
          <a href="https://github.com/fematarazzo/energy_consumption"><i class="fab fa-github"></i></a>
          <a href="https://www.instagram.com/energialemon/"><i class="fab fa-instagram"></i></a>
          <a href="https://www.facebook.com/EnergiaLemon/"><i class="fab fa-facebook"></i></a>
